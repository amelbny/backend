    "clean": "rimraf ./build/src",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "eslint": "eslint . --ext .js,.tsx",
    "upgrade": "npm update --save-dev && npm update --save",
    "test": "NODE_ENV=test jest __tests__/index.test.ts --forceExit --detectOpenHandles",
